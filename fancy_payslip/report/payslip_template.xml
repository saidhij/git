<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data> 

<template id="fancy_payslip_report">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="report.external_layout">
                <div class="page" t-attf-style="background-image:url('/fancy_payslip/static/src/img/bg_background_template4.png'); background-size:297mm 297mm; width:297mm; height:297mm;"> 
			
<STYLE TYPE="text/css">
			
body { background: #ffffff; margin: 0; font-family: Arial; font-size: 10pt; font-style: normal; }
</STYLE>
<div class="oe_structure"/>	
			
				   <div class="bg-primary text-white">
                            <h2>Payslip </h2>
                            <h4>Period from <span t-field="o.date_from"/> To <span t-field="o.date_to"/></h4>
                        </div>
                    <table class="table table-bordered"  style="border: 2px solid black;">
                       						    
                        <tr>

						 <td colspan="1" ><strong>Name</strong></td>
                            <td colspan="3"><span t-field="o.employee_id.name"/></td>
							
						    <td><strong>Adresse</strong></td>
							<td colspan="4">
                            <div t-field="o.employee_id.address_home_id"/>
                            </td>
							<td colspan="1"><strong>Email</strong></td>
                            <td colspan="2" ><span t-field="o.employee_id.work_email"/></td>
							        
                            <td colspan="2"><strong>Start Date</strong></td>
							<td colspan="2"><span t-field="o.contract_id.date_start"/></td></tr><tr>
							<td colspan="2"><strong>Department</strong></td>
                            <td colspan="2"><span t-field="o.employee_id.department_id"/></td>

							<td colspan="2"><strong>Job Position</strong></td>
                            <td colspan="4"><span t-field="o.employee_id.job_id"/></td>
							
							<td colspan="2"><strong>Bank Account</strong></td>
                            <td colspan="4" ><span t-field="o.employee_id.bank_account_id"/></td>
                        </tr>
						                       
                        <tr>
						    <td colspan="3"><strong>Social Security Number</strong></td>
                            <td colspan="2" ><span t-field="o.employee_id.ssnid"/></td>
                            <td colspan="3"><strong>Social Insurance Number</strong></td>
                            <td colspan="2" ><span t-field="o.employee_id.sinid"/></td>
                            <td colspan="3"><strong>Identification Number</strong></td>
                            <td colspan="3" ><span t-field="o.employee_id.identification_id"/></td>
						
						</tr>
                    </table>
				
					<table class="table number-center table-bordered" style="border: 2px solid black;">
                        <thead>
                            <tr>
                                <th class="bg-primary text-white" style="border: 1px solid black;">Name</th>
                                <th class="bg-primary text-white" style="border: 1px solid black;">Quantity</th>
                                <th class="bg-primary text-white" style="border: 1px solid black;">Base</th>						
                                <th class="bg-primary text-white" style="border: 1px solid black;">Total</th>
							<!-- 	<th class="bg-primary text-white">Yield to date</th>  -->
							 
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="get_payslip_lines(o.line_ids)" t-as="p">
							
                                <td><span t-esc="p.name or ''"/></td>
                                <td><span t-esc="p.quantity or ''"/></td>
								<td><span t-esc="p.amount or ''"/></td>
                           <!--  <td>
                                    <t t-if="p.amount_select == 'percentage'">
                                        <span t-esc="p.rate or ''"/>
                                    </t>
                                </td> -->
								
                                <td><span t-esc="p.total or ''"/></td>
					 <!--            <td><span t-esc="p.amount_ytd or ''"/></td>   -->
                            </tr>
                        </tbody>

                    </table>
                     <div class="row">
                        <div class="col-xs-12">
                            <table class="table  table-round-border">
                                <tr>
                                    <td><div class="pull-right"><button type="button" class="btn btn-primary">Net Salary <span class="badge"><span t-esc="get_total_by_rule_category(o, 'NET')"/></span></button></div>
                                 
										
                                        <div class="mt15">
                                             <t t-if="o.paid is True"><strong>Paid by <span t-esc="o.payment_mode or ''"/> </strong></t>
                                        </div>
                                        
                                   </td>
                                </tr>   
                            </table>
                        </div>
                     </div>   
					 <div class="bg-primary text-white">
                  <table class="table table-bordered text-center" style="border: 2px solid black;">
                        <thead>
                            <tr>
                                 <th >Basic salary</th>
                                 <th >Allowances</th>
                                 <th >Gross Salary</th>
                                 <th >Deduction</th>
                                 <th >Net Salary</th>
								 <th >Company Contribution</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><span t-esc="get_total_by_rule_category(o, 'BASE')"/></td>
                                <td><span t-esc="get_total_by_rule_category(o, 'ALW')"/></td>
                                <td><span t-esc="get_total_by_rule_category(o, 'GROSS')"/></td>
                                <td><span t-esc="get_total_by_rule_category(o, 'DED')"/></td>
                                <td><span t-esc="get_total_by_rule_category(o, 'NET')"/></td>
								<td><span t-esc="get_total_by_rule_category(o, 'COMP')"/></td>
                            </tr>
                        </tbody>
                    </table>  </div>

                    <p class="mt30">Please keep this payslip for your records</p>
                				</div>
            </t>
        </t>
    </t>
</template>
</data>
</odoo>
