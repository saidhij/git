<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_hr_payslip_form" model="ir.ui.view">
            <field name="name">hr.payslip.period.form</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
            <field name="arch" type="xml">
               <xpath expr="//field[@name='details_by_salary_rule_category']//field[@name='total']" position="after">
                    <field name="amount_ytd"/>
                </xpath>
            </field>
        </record>
<record id="hr_payslip_form_l10n_ma_payroll" model="ir.ui.view">
            <field name="name">hr.payslip.form.l10n.ma.payroll</field>
            <field name="model">hr.payslip</field>
            <field name="priority">20</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
            <field name="arch" type="xml">
            <data>
                 <xpath expr="//field[@name='paid']" position="after">
                    <field name="payment_mode"/>
                    <field name="payment_date"/> 
                 </xpath>
            </data>
            </field>
        </record>
	
	  </data>
	
</odoo>
