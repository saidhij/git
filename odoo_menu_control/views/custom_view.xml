<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
	
	<template id="webclient_bootstrap"
              inherit_id="web.webclient_bootstrap"
              name="Toggle - Web Client"
              >

			
		</template> 
		
		
		<template id="custom_navbar" name="custom_navbar" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/odoo_menu_control/static/src/js/toggle.js"></script>
            </xpath>
        </template>

		 		 <template id="webclient_bootstrap_submenu" inherit_id="web.webclient_bootstrap">
         <xpath expr="//div[@class='o_main_content']" position="inside">
                
                    
					<table>

  <tr>
    <th class="btn-link toggle_submenu">
					
					<button type="button"  >
                                    
                                <div class="fa fa-arrow-circle-o-left fa-lg"/> Hide Show Left Menu <div class="fa fa-arrow-circle-o-right fa-lg" />
                            </button>
							</th>
    <th class="btn-link toggle_topmenu">   
					<button type="button" >
                                    
                         
                                <div class="fa fa-arrow-circle-o-up fa-lg"/> Hide  Show Top Menu <div class="fa fa-arrow-circle-o-down fa-lg" /> 
                            </button></th>
    
  </tr>
					
		</table>			
					

            </xpath>

        </template>


		
	</data>
</odoo>
